<StackPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Orientation="Horizontal" Background="White">
  <Border BorderBrush="Black" BorderThickness="0,0,2,0">
    <TextBlock Width="50" Margin="0,0,3,0" Height="20" TextAlignment="Right">
      <TextBlock.Background>White</TextBlock.Background>
      <TextBlock.Text>Name</TextBlock.Text>
    </TextBlock>
  </Border>
  <Rectangle>
    <Rectangle.Fill>Green</Rectangle.Fill>
    <Rectangle.Width>50</Rectangle.Width>
    <Rectangle.Height>15</Rectangle.Height>
  </Rectangle>
  <TextBlock Height="20" TextAlignment="Left">
    <TextBlock.Background>White</TextBlock.Background>
    <TextBlock.Text> 50</TextBlock.Text>
  </TextBlock>
</StackPanel>

