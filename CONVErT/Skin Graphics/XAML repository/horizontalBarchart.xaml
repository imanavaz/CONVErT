  <TextBlock HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="5">
    <TextBlock.Text>Name</TextBlock.Text>
  </TextBlock>
  <TextBlock HorizontalAlignment="Center" DockPanel.Dock="Bottom" Margin="5">
    <TextBlock.Text>Scale</TextBlock.Text>
  </TextBlock>
